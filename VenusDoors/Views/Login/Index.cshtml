
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VenusDoors.Models.User
<div class="br-pagebody">
    <div class="br-section-wrapper" style="margin-top: 100px;margin-left: 50px;margin-right: 50px;">
            <div class="modal-body pd-0">
                        <div class="row no-gutters">
                            <div class="col-lg-6 bg-primary">
                                <div class="pd-40">
                                    <h4 class="tx-white mg-b-20"><span>[</span> bracket + <span>]</span></h4>
                                    <p class="tx-white op-7 mg-b-60">It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
                                    <p class="tx-white tx-13">
                                        <span class="tx-uppercase tx-medium d-block mg-b-15">Our Address:</span>
                                        <span class="op-7">Ayala Center, Cebu Business Park, Cebu City, Cebu, Philippines 6000</span>
                                    </p>
                                </div>
                            </div><!-- col-6 -->
                            <div id="login-div" class="col-lg-6 bg-white">
                            @using (Html.BeginForm("Autherize", "Login",FormMethod.Post))
                            {
                                <div class="pd-30">
                                    <div class="pd-x-30 pd-y-10">
                                        <h3 class="tx-inverse mg-b-5">Welcome back!</h3>
                                        <p>Sign in to your account to continue</p>
                                        <br>
                                        <div class="form-group">
                                        @Html.LabelFor(model => model.Email)
                                        @*@Html.EditorFor(model => model.Email)*@  
                                            <input class="form-control" data-val="true" data-val-required="This field is required" id="Email" name="Email" type="text" value="">                                          
                                        </div><!-- form-group -->
                                        <div class="form-group mg-b-20">
                                            @Html.ValidationMessageFor(model => model.Password)
                                        </div><!-- form-group -->
                                        <div class="form-group mg-b-20">
                                            @Html.LabelFor(model => model.Password)
                                            @*@Html.EditorFor(model => model.Password)*@ 
                                            <input class="form-control" data-val="true" data-val-required="This field is required" id="Password" name="Password" type="password" value="">    
                                            <a href="" class="tx-12 d-block mg-t-10">Forgot password?</a>
                                        </div><!-- form-group -->
                                        <div class="form-group mg-b-20">
                                            @Html.ValidationMessageFor(model => model.Password)
                                        </div>
                                        </div><!-- form-group -->
                                        <div class="form-group mg-b-20">                                          
                                        @Html.ValidationMessageFor(model => model.Password)
                                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                                        </div><!-- form-group -->

                                        <input type="submit" value="Sign In" class="btn btn-primary pd-y-12 btn-block"/>

                                        <div class="mg-t-30 mg-b-20 tx-12">Don't have an account yet? @Html.ActionLink("Create one!", "sing_up", "Login")</div>

                                        <p class="tx-11 tx-uppercase tx-spacing-2">Or Sign In With</p>
                                        <a href="#" class="btn btn-primary btn-icon">
                                            <div><i class="fa fa-facebook"></i></div>
                                        </a>
                                        <a href="#" class="btn btn-info btn-icon mg-l-5">
                                            <div><i class="fa fa-twitter"></i></div>
                                        </a>
                                        <a href="#" class="btn btn-danger btn-icon mg-l-5">
                                            <div><i class="fa fa-google-plus"></i></div>
                                        </a>

                                    </div>
                               
                            }
                            </div><!-- col-6 -->
                        </div><!-- row -->

                    </div><!-- modal-body -->
                </div><!-- modal-content -->
            </div><!-- modal-dialog -->