
@{
    ViewBag.Title = "Control of Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="br-pageheader pd-y-15 pd-l-20">
    <nav class="breadcrumb pd-0 mg-0 tx-12">
        <a class="breadcrumb-item" href="/">Venus Doors</a>
        <span class="breadcrumb-item active">@ViewBag.Title</span>
    </nav>
</div><!-- br-pageheader -->

<div class="br-pagebody">
    <div class="br-section-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-11 pd-sm-bottom-30">
                        <h4 class="tx-gray-800 mg-b-5">@ViewBag.Title</h4>
                        <p class="mg-b-0">Modals are streamlined, but flexible, dialog prompts with the minimum required functionality and smart defaults.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-wrapper">
            <div id="datatable1_wrapper" class="dataTables_wrapper no-footer">
                <table id="datatable1" style="width: 100%;" class="table display responsive nowrap dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable1_info">
                    <thead>
                        <tr>
                            <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="First name: activate to sort column ascending">Reference number</th>
                            <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Number of items</th>
                            <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Total</th>
                            <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Status</th>
                            <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="text-align: center" aria-label="Last name: activate to sort column ascending"><i class="fa fa-flash"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Ordenes == null)
                        {
                            <tr class="odd">
                                <td valign="top" colspan="10" class="dataTables_empty">No data available in table.</td>
                            </tr>
                        }
                        else {
                            foreach (Model.Order item in ViewBag.Ordenes)
                            {
                                <tr role="row" class="odd">
                                    <td tabindex="0" class="">@item.Id</td>
                                    <td class="">@item.Quantity</td>
                                    <td class="">@item.Total</td>
                                    <td class="tx-12">
                                        @if (item.Status.Id == 7)
                                        { <span class="square-8 bg-success mg-r-5 rounded-circle"></span> }
                                        else if (item.Status.Id == 6)
                                        { <span class="square-8 btn-primary mg-r-5 rounded-circle"></span> }
                                        else if (item.Status.Id == 5)
                                        { <span class="square-8 bg-warning mg-r-5 rounded-circle"></span> }
                                        @item.Status.Description
                                    </td>

                                    <td class="">

                                        <button href="#" data-id="@item.Id" id="" value="" class="Detalle Cursor btn btn-info btn-icon">
                                            <div><i class="fa fa-eye"></i></div>
                                        </button>
                                        @if (item.Status.Id == 5)
                                        { <a href="#" data-target="" id="" title="Approve order." value="@item.Id" class="Approved btn btn-primary btn-icon">
                                    <div><i class="fa fa-check"></i></div>
                                </a>
                                    <a href="#" data-toggle="modal" data-target="" id="" title="Remove order." value="@item.Id" class="Remove btn btn-danger btn-icon">
                                        <div><i class="fa fa-close"></i></div>
                                    </a>}
                                        else if (item.Status.Id == 6)
                                        {<a href="#" data-target="" id="" title="Process order." value="@item.Id" class="Process btn btn-warning btn-icon">
                                    <div><i class="fa fa-check"></i></div>
                                </a> }
                                        else if (item.Status.Id == 7)
                                        {<a href="#" data-target="" id="" title="Complete order." value="@item.Id" class="Completed btn btn-success btn-icon">
                                    <div><i class="fa fa-check"></i></div>
                                </a> }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div><!-- table-wrapper -->
    </div>
</div>
<div id="ui-datepicker-div" class="ui-datepicker ui-widget ui-widget-content ui-helper-clearfix ui-corner-all"></div>

<div class="modal fade" id="ModalOrderInfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <div class="modal-dialog modal-lg" id="mdialTamanio" style="width: 80%!important">
        <div class="modal-content">
            <div class="modal-header" id="orderhead">
