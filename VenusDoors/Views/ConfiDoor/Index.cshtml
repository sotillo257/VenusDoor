
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="br-pageheader pd-y-15 pd-l-20">
        <nav class="breadcrumb pd-0 mg-0 tx-12">
            <a class="breadcrumb-item" href="/">Venus Doors</a>
            <span class="breadcrumb-item active">Door Configuration</span>
        </nav>
    </div><!-- br-pageheader -->
     <div class="row ">
        <div class="br-pagebody mg-t-5 pd-x-30" style="margin-top: 35px;">
             <table style="margin-left: 25px;">
                  <tbody>
                      <tr>
                          <td>
                              <label for="Template" style="font-size:16px;margin-top: 25px;">Template / Item Name: </label>
                              <div>
                                  <input class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="Template" />
                                  <button id="btn_carrito" style="margin-top: 10px; padding: 5px; font-size: 12px;" type="button" href="#" class="btn btn-primary" title="">Save settings</button>
                              </div>
                          </td>

                          <td>
                              <label for="Wood" style="font-size:16px;margin-top: 25px;">Wood Species: </label>
                              <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="Wood">
                                  <option> </option>
                                  <option>Poplar</option>
                                  <option>Alder</option>
                                  <option>Red Oak</option>
                                  <option>Maple</option>
                                  <option>Beech</option>
                                  <option>Red Oak - Eyebrow</option>
                                  <option>Poplar – Special Eyebrow</option>
                              </select>
                          </td>

                          <td>
                              <label for="Width" style="font-size:16px;margin-top: 25px;">Width: </label>
                              <input class="form-control" style="width: 206px; margin-right: 35px;" type="number" id="Width" />
                          </td>

                          <td>
                              <label for="Height" style="font-size:16px;margin-top: 25px;">Height: </label>
                              <input class="form-control" style="width: 206px; margin-right: 35px;" type="number" id="Height" />
                          </td>

                      </tr>

                      <tr>
                          <td colspan="4">
                              <img style="height: 100px;width: 400px;margin-top: 20px;" src="~/Content/img/Cabinet_Vector-18.jpg" />
                          </td>
                      </tr>

                      <tr>
                          <td>
                              <label for="Template" style="font-size:16px;margin-top: 25px;">Front View:</label>
                              <button id="btn_carrito" style="padding-bottom: 7px;padding-top: 7px;" type="button" href="#" class="btn btn-primary" title="">Click for photo preview</button>
                          </td>
                      </tr>
                  </tbody>
              </table>

                 <hr>

                 <table style="margin-left: 25px;">
                     <tbody>
                         <tr>
                             <td>
                                 <label for="DoorStyle" style="font-size:16px;margin-top: 25px;">Door Style </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbDoorStyle">
                                     
                                 </select>
                             </td>

                             <td>
                                 <label for="InsideEdgeProfile" style="font-size:16px;margin-top: 25px;">Inside Edge Profile: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbInsideEdgeProfile">
                                     
                                 </select>
                             </td>

                             <td>
                                 <label for="OutsideEdgeProfile" style="font-size:16px;margin-top: 25px;">Outside Edge Profile: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbOutsideEdgeProfile">
                                     
                                 </select>
                             </td>

                             <td rowspan="5" style="width: 300px;">
                                 <div><img style="width: 300px;display: flex;" src="~/Content/img/Cabinet_Vector-01.jpg" /></div>
                             </td>

                         </tr>

                         <tr>
                             <td>
                                 <label for="BottomRail" style="font-size:16px;margin-top: 25px;">Bottom Rail: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbBottomRail">
                                     
                                 </select>
                             </td>

                             <td>
                                 <label for="TopRail" style="font-size:16px;margin-top: 25px;">Top Rail: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbTopRail">
                                     
                                 </select>
                             </td>

                             <td>
                                 <label for="Wood" style="font-size:16px;margin-top: 25px;">Upper / Lower Style: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="Wood">
                                     <option> </option>
                                     <option>Standard-Standard</option>
                                     <option>Brow-Standard</option>
                                     <option>Cathedral-Standard</option>
                                     <option>Brow-Brow</option>
                                     <option>Cathedral-Cathedral</option>
                                 </select>
                             </td>

                         </tr>

                         <tr>
                             <td>
                                 <label for="Panel" style="font-size:16px;margin-top: 25px;">Panel Type: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbPanel">
                                     
                                 </select>
                             </td>

                             <td>
                                 <label for="PanelMaterial" style="font-size:16px;margin-top: 25px;">Panel Profile: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbPanelMaterial">
                                     
                                 </select>
                             </td>

                             <td>
                                 <label for="VerticalDivisions" style="font-size:16px;margin-top: 25px;">Vertical Divisions: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbVerticalDivisions">
                                     
                                 </select>
                             </td>

                         </tr>

                         <tr>

                             <td>
                                 <label for="HorizontalDivisions" style="font-size:16px;margin-top: 25px;">Horizontal Divisions: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbHorizontalDivisions">
                                     
                                 </select>
                             </td>

                             <td>
                                 <label for="Profile" style="font-size:16px;margin-top: 25px;">Hinge Drilling: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="Profile">
                                     <option> </option>
                                     <option>Raised Panel</option>
                                     <option>Shaker Panel</option>
                                     <option>Beaded Shaker Panel</option>
                                     <option>Recessed Paneloption>
                                     <option>Beaded Recessed Panel</option>
                                     <option>Open For Glass</option>
                                     <option>Wood Slab</option>
                                 </select>
                             </td>

                             <td>
                                 <label for="HingeDirection" style="font-size:16px;margin-top: 25px;">Hinge Direction: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbHingeDirection">
                                     
                                 </select>
                             </td>

                         </tr>

                         <tr>
                             <td>
                                 <label for="HingePositions" style="font-size:16px;margin-top: 25px;">Hinge Positions: </label>
                                 <select class="form-control" style="width: 206px; margin-right: 35px;" type="text" id="cbHingePositions">
                                     
                                 </select>
                             </td>
                         </tr>
                     </tbody>
                 </table>
             </div>
         </div>

@section scripts{

    <script type="text/javascript">
        var urlObtenerMaterial = '@Url.Action("ObtenerMaterial", "ConfiDoor")';
        var urlGetAllDoorStyle = '@Url.Action("GetAllDoorStyle", "ConfiDoor")';
        var urlGetAllInsideEdgeProfile = '@Url.Action("GetAllInsideEdgeProfile", "ConfiDoor")';
        var urlGetAllOutsideEdgeProfile = '@Url.Action("GetAllOutsideEdgeProfile", "ConfiDoor")';
        var urlGetAllBottomRail = '@Url.Action("GetAllBottomRail", "ConfiDoor")';
        var urlGetAllTopRail = '@Url.Action("GetAllTopRail", "ConfiDoor")';
        var urlGetAllPanel = '@Url.Action("GetAllPanel", "ConfiDoor")';
        var urlGetAllPanelMaterial = '@Url.Action("GetAllPanelMaterial", "ConfiDoor")';
        var urlGetAllVerticalDivisions = '@Url.Action("GetAllVerticalDivisions", "ConfiDoor")';
        var urlGetAllHorizontalDivisions = '@Url.Action("GetAllHorizontalDivisions", "ConfiDoor")';
        var urlGetAllHingeDirection = '@Url.Action("GetAllHingeDirection", "ConfiDoor")';
        var urlGetAllHingePositions = '@Url.Action("GetAllHingePositions", "ConfiDoor")';
    </script>
  @Scripts.Render("~/Scripts/js/ConfigDoor.Index.js")

}