@section scripts{
    <script>
        var urlInsertTopRailxHorizontalDivisions = '@Url.Action("InsertTopRailxHorizontalDivisions", "Masters")';
        var urlUpdateTopRailxHorizontalDivisions = '@Url.Action("UpdateTopRailxHorizontalDivisions", "Masters")';
    </script>
    <script>
        $(function () {
            'use strict';

            $('#datatable1').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: 'Search...',
                    sSearch: '',
                    lengthMenu: '_MENU_ items/page',
                }
            });

            $('#datatable2').DataTable({
                bLengthChange: false,
                searching: false,
                responsive: true
            });

            // Select2
            $('.dataTables_length select').select2({ minimumResultsForSearch: Infinity });

        });
    </script>
    <script src="~/Content/lib/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/lib/datatables-responsive/dataTables.responsive.js"></script>
    <script src="~/Content/lib/select2/js/select2.min.js"></script>
    @Scripts.Render("~/Scripts/js/Masters.js")
    <script type="text/javascript">

        $(document).ready(function () {
            var listTRH = JSON.parse('@Html.Raw(ViewBag.ListTopRailxHorizontal)');
            $(document).on('click', '.Modificar', function (event) {
                for (var i = 0; i < listTRH.length; i++) {
                    if (listTRH[i].Id == $(this).attr('value')) {
                        $('#txtId').val(listTRH[i].Id);
                        $('#cbTopRail').val(listTRH[i].TopRail.Id);
                        $('#cbHorizontalDivisions').val(listTRH[i].HorizontalDivisions.Id);
                        $('#IdStatus').val(listTRH[i].Status.Id);
                    }
                }
            });


        });

    </script>
}