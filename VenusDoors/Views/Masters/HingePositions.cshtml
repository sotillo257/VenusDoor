                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-xs-4 col-md-4">
                                                <label for="Template" style="margin-top: 25px;">Id: </label>
                                                <input type="text" name="Identificador" value="@ViewBag.IdItem" id="txtId" class="form-control" readonly placeholder="">
                                            </div><!-- form-group -->
                                            <div class="col-xs-4 col-md-4">
                                                <label for="Template" style="margin-top: 25px;">Position 1: </label>
                                                <input type="text" name="id" id="txtPosition" class="form-control" placeholder="">
                                            </div><!-- form-group -->
                                            <div class="col-xs-4 col-md-4">
                                                <label for="Template" style="margin-top: 25px;">Position 2: </label>
                                                <input type="text" name="id" id="txtPosition2" class="form-control" placeholder="">
                                            </div><!-- form-group -->
                                            <div class="col-xs-4 col-md-4">
                                                <label for="Template" style="margin-top: 25px;">Position 3: </label>
                                                <input type="text" name="id" id="txtPosition3" class="form-control" placeholder="">
                                            </div><!-- form-group -->
                                            <div class="col-xs-4 col-md-4">
                                                <label for="Template" style="margin-top: 25px;">Position 4: </label>
                                                <input type="text" name="id" id="txtPosition4" class="form-control" placeholder="">
                                            </div><!-- form-group -->
                                            <div class="col-xs-4 col-md-4">
                                                <label for="Template" style="margin-top: 25px;">Position 5: </label>
                                                <input type="text" name="id" id="txtPosition5" class="form-control" placeholder="">
                                            </div><!-- form-group -->
                                            <div class="col-xs-4 col-md-4">
                                                <label for="IdStatus" style="margin-top: 25px;">Status: </label>
                                                <select style="width:100%" class="form-control select2" id="IdStatus" data-placeholder="">
                                                    @foreach (Model.Status item in ViewBag.mStatus)
                                                    {
                                                        <option value="@item.Id">@item.Description</option>
                                                    }
                                                </select>
                                            </div><!-- form-group -->
                                        </div>
                                    </div><!-- pd-20 -->
                                </div><!-- col-6 -->
                            </div><!-- row -->
                            <div class="modal-footer justify-content-lg-end">
                                <button type="button" id="btnUpdateHingePosi" class="btn btn-primary tx-11 tx-uppercase pd-y-12 pd-x-25 tx-mont tx-medium">Modify</button>
                                <button type="button" class="btn btn-secondary tx-11 tx-uppercase pd-y-12 pd-x-25 tx-mont tx-medium" data-dismiss="modal">Cancel</button>
                            </div>
                        </div><!-- modal-body -->
                    </div><!-- modal-content -->
                </div><!-- modal-dialog -->
            </div>
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div>

<div id="modaldemo2" class="modal fade" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content bd-0 tx-14">
            <div class="modal-header pd-x-20">
                <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Warning!</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
