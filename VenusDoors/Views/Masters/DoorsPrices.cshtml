
@{
    ViewBag.Title = "Doors Prices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="br-pageheader pd-y-15 pd-l-20">
    <nav class="breadcrumb pd-0 mg-0 tx-12">
        <a class="breadcrumb-item" href="/">Venus Doors</a>
        <a class="breadcrumb-item" href="#">Masters</a>
        <span class="breadcrumb-item active">@ViewBag.Title</span>
    </nav>
</div><!-- br-pageheader -->

<div class="br-pagebody">
    <div class="br-section-wrapper">
        <div class="table-wrapper">
            <div id="datatable1_wrapper" class="dataTables_wrapper no-footer">
                <table style="width: 100%;" id="datatable1" class="table display responsive nowrap dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable1_info">
                        <thead>
                            <tr>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="First name: activate to sort column ascending">Id</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Door Style</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Material</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Stile Width</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Rail Width</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Base Price</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Additional SF Price</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Vertical Base1 FL Price</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Horizontal Base1 FL Price</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Horizontal Additional Inch Price</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Last name: activate to sort column ascending">Status</th>
                                <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="text-align: center" aria-label="Last name: activate to sort column ascending"><i class="fa fa-flash"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Model.DoorsPrices item in ViewBag.mDoorsPrices)
                            {
                                <tr role="row" class="odd">
                                    <td tabindex="0" class="">@item.Id</td>
                                    <td class="">@item.DoorStyle.Id</td>
                                    <td class="">@item.Material.Id</td>
                                    @*<td class="">@item.IdStileWidth</td>
                                    <td class="">@item.IdRailWidth</td>*@
                                    <td class="">@item.BasePrice</td>
                                    <td class="">@item.AdditionalSFPrice</td>
                                    <td class="">@item.VerticalAdditionalInchPrice</td>
                                    <td class="">@item.HorizontalBase1FLPrice</td>
                                    <td class="">@item.HorizontalAdditionalInchPrice</td>
                                    <td class="">@item.Status.Id</td>
                                    <td class="">
                                        <a href="#" data-toggle="modal" data-target="#modaldemo1" value="@item.Id" class="Modificar btn btn-primary btn-icon">
                                            <div><i class="fa fa-edit"></i></div>
                                        </a>
                                        <a href="#" data-toggle="modal" data-target="#modaldemo2" value="@item.Id" class="btn btn-danger btn-icon">
                                            <div><i class="fa fa-trash"></i></div>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
            </div>
        </div><!-- table-wrapper -->
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            'use strict';

            $('#datatable1').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: 'Search...',
                    sSearch: '',
                    lengthMenu: '_MENU_ items/page',
                }
            });

            $('#datatable2').DataTable({
                bLengthChange: false,
                searching: false,
                responsive: true
            });

            // Select2
            $('.dataTables_length select').select2({ minimumResultsForSearch: Infinity });

        });
        $(function () {
            'use strict'

            $('.form-layout .form-control').on('focusin', function () {
                $(this).closest('.form-group').addClass('form-group-active');
            });

            $('.form-layout .form-control').on('focusout', function () {
                $(this).closest('.form-group').removeClass('form-group-active');
            });

            // Select2
            $('#select2-a, #select2-b').select2({
                minimumResultsForSearch: Infinity
            });

            $('#select2-a').on('select2:opening', function (e) {
                $(this).closest('.form-group').addClass('form-group-active');
            });

            $('#select2-a').on('select2:closing', function (e) {
                $(this).closest('.form-group').removeClass('form-group-active');
            });

        });
    </script>
    <script src="~/Content/lib/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/lib/datatables-responsive/dataTables.responsive.js"></script>
    <script src="~/Content/lib/select2/js/select2.min.js"></script>
    <script src="~/Content/lib/select2/js/select2.full.min.js"></script>

<script type="text/javascript">

        $(document).ready(function () {
            var listDoorP = JSON.parse('@Html.Raw(ViewBag.ListDoorsPrices)');
            $(document).on('click', '.Modificar', function (event) {
                for (var i = 0; i < listDoorP.length; i++) {
                    if (listDoorP[i].Id == $(this).attr('value')) {
                        $('#txtId').val(listDoorP[i].Id);
                        $('#cbDoorStyle').val(listDoorP[i].DoorStyle.Id);
                        $('#cbMatarial').val(listDoorP[i].Material.Id);
                        $('#txtBasePrice').val(listDoorP[i].BasePrice);
                        $('#txtAdditinalSFPrice').val(listDoorP[i].AdditionalSFPrice);
                        $('#IdStatus').val(listDoorP[i].Status.Id);
                        $('#txtidVerticalBase1FLPrice').val(listDoorP[i].VerticalAdditionalInchPrice);
                        $('#txtHorizontalBase1FLPrice').val(listDoorP[i].HorizontalBase1FLPrice);
                        $('#txtHorizontalAdditionalInchPrice').val(listDoorP[i].HorizontalAdditionalInchPrice);
                    }
                }
            });


        });

</script>

}
